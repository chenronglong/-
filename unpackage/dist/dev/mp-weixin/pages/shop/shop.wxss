    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: 30rpx;
}
.size .property view:nth-of-type(2) {
      margin-left: 40rpx;
      font-size: 28rpx;
      font-weight: normal;
      color: #969696;
}
.size .property view:last-of-type {
      font-size: 22rpx;
      font-weight: normal;
      color: #969696;
      margin-left: auto;
}
.num {
  color: #F94B2F;
}
.img {
  position: absolute;
  z-index: -10;
  width: 100%;
  height: 450rpx;
}

